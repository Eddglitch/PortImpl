

.header {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  transition: transform 0.3s ease-in-out;
  background-color: var(--background-color);
  padding: 0 2rem;
}

.nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70px;
  width: 100%;
}

.logo {
  display: flex;
  align-items: center;
  font-size: 1.2rem;
  font-weight: bold;
}

.navLinks {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  gap: 2rem; /* Espacio entre links en escritorio */
  align-items: center;
  flex-grow: 1; /* Permite que el menú crezca */
  padding-left: 4rem; /* Mueve el menú a la izquierda */
}

.navLinks a {
  color: var(--text-color);
  text-decoration: none;
  font-size: 1rem;
  transition: color 0.3s ease;
  padding: 7px; /* Padding solicitado */
}

.navLinks a:hover {
  color: var(--primary-color);
}

.hamburger {
  display: none; /* Oculto en escritorio */
  background: none;
  border: none;
  cursor: pointer;
  z-index: 1001;
}

.hamburger div {
  width: 25px;
  height: 3px;
  background-color: var(--text-color);
  margin: 5px 0;
  transition: all 0.3s ease;
}

/* Estilos para pantallas pequeñas */
@media (max-width: 768px) {
  .navLinks {
    position: fixed;
    top: 0;
    left: -100%; /* Oculto fuera de la pantalla */
    width: 100%;
    height: 100vh;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(5px);
    transition: left 0.4s ease-in-out;
    padding-left: 0; /* Resetea el padding en móvil */
  }

  .navLinks.open {
    left: 0; /* Muestra el menú */
  }

  .navLinks li {
    margin: 20px 0;
  }

  .navLinks a {
    font-size: 1.5rem;
  }

  .hamburger {
    display: block; /* Visible en móvil */
  }

  /* Animación del botón de hamburguesa a "X" */
  .hamburger.open .line1 {
    transform: rotate(-45deg) translate(-5px, 6px);
  }
  .hamburger.open .line2 {
    opacity: 0;
  }
  .hamburger.open .line3 {
    transform: rotate(45deg) translate(-5px, -6px);
  }
}

