        ::-webkit-scrollbar:horizontal { height: 8px; }
        ::-webkit-scrollbar-track { background: var(--color-bg-secondary); }
        ::-webkit-scrollbar-thumb { background: var(--color-accent-orange); border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: var(--color-accent-blue); }

        
        .eye-container-wrapper {
            position: fixed;
            top: 10px;
            right: 8px;
            display: flex; 
            gap: 5px; 
            z-index: 9990; 
            cursor: pointer; 
            padding: 10px; 
            border-radius: 10px;
            background: rgba(0,0,0,0.0); 
            transition: background-color 0.3s ease;
        }
        .eye-container-wrapper:hover {
            background: rgba(0,0,0,0.0);
        }

        
        .eye-sphere {
            width: 40px; 
            height: 40px; 
            background: radial-gradient(circle at 50% 50%, #2a2a2a, #0a0a0a); 
            border-radius: 50%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5), inset 0 0 5px rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative; 
        }
        
        body[data-theme="light"] .eye-sphere {
            background: radial-gradient(circle at 50% 50%, #e0e0e0, #f8f8f8); 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2), inset 0 0 5px rgba(0, 0, 0, 0.05);
        }

        .eye-iris {
            position: absolute;
            width: 80%; 
            height: 80%;
            
            background: radial-gradient(circle at 30% 30%, #4CAF50, #2E7D32); 
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.1s ease-out; 
        }
        
        body[data-theme="light"] .eye-iris {
            background: radial-gradient(circle at 30% 30%, #81C784, #66BB6A); 
        }

        .eye-iris::before {
            content: '';
            position: absolute;
            width: 25%;
            height: 25%;
            background-color: rgba(255, 255, 255, 0.6); 
            border-radius: 50%;
            top: 15%;
            left: 15%;
            filter: blur(1px);
        }

        .eye-pupil {
            position: relative;
            background-color: black;
            border-radius: 50%; 
            transform-origin: center center;
            transition: width 0.3s ease, height 0.3s ease, transform 0.3s ease; 
        }

        
        .eye-pupil.day-mode-pupil {
            width: 15%; 
            height: 70%; 
            transform: scaleX(0.5); 
        }

        
        .eye-pupil.night-mode-pupil {
            
            width: 64%; 
            height: 64%;
            transform: scaleX(1); 
            border-radius: 50%; 
        }

        
        .eye-lid {
            position: absolute;
            background-color: var(--color-bg-primary); 
            width: 100%;
            height: 50%;
            left: 0;
            transform-origin: center bottom; 
            transition: transform 0.2s ease-out, background-color 0.5s ease; 
        }
        .eye-lid.top {
            top: 0;
            transform: translateY(-100%) rotateX(-10deg); 
        }
        .eye-lid.bottom {
            bottom: 0;
            transform: translateY(100%) rotateX(10deg); 
        }
        .eye-lid.top.closed {
            transform: translateY(0%) rotateX(0deg); 
        }
        .eye-lid.bottom.closed {
            transform: translateY(0%) rotateX(0deg); 
        }

        
        @media (max-width: 768px) {
            .hero h1 {
                font-size: clamp(2rem, 10vw, 2.5rem);
            }
            .hero .subtitle {
                font-size: clamp(1rem, 5vw, 1.2rem);
            }
            nav { padding: 0 20px; }
            .nav-links { display: none; } 
            section { padding: 80px 20px; }
            .about-content { grid-template-columns: 1fr; gap: 40px; } 
            .projects-grid, .bands-grid { grid-template-columns: 1fr; } 
            .interests, #trayectoria-musical { margin: 0 -20px; padding: 80px 20px; }
            .band-media { grid-template-columns: 1fr; }
            .band-links { justify-content: center; }
            .contact-links { flex-direction: column; align-items: center; }
            .eye-container-wrapper {
                top: 10px;
                right: 10px;
                gap: 3px;
                padding: 5px; 
            }
            .eye-sphere {
                width: 35px; 
                height: 35px;
            }
            .eye-iris {
                width: 80%;
                height: 80%;
            }
            
            .eye-pupil.day-mode-pupil {
                width: 15%; 
                height: 70%;
            }
            .eye-pupil.night-mode-pupil {
            width: 57%; 
            height: 57%;
        }
    }

/* Showcase Overlay Styles */
.showcase-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeInOverlay 0.3s ease-in-out;
}

@keyframes fadeInOverlay {
  from { opacity: 0; }
  to { opacity: 1; }
}

.showcase-overlay > div {
  width: 90%;
  height: 90%;
  max-width: 1400px;
  position: relative;
}

        @media (max-width: 480px) {
            .hero-content {
                padding: 0 20px;
            }
            .project-card, .band-card {
                padding: 20px;
            }
            .project-content {
                padding: 20px;
            }
            .band-name {
                font-size: 1.5rem;
            }
            .section-title {
                font-size: clamp(2rem, 10vw, 2.5rem);
            }
        }